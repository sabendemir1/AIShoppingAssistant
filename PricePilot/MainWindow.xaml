<Window x:Class="PricePilot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TopBar"
        Height="40" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        AllowsTransparency="True"
        Background="#AA000000"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        Left="0" Top="0">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="AI Deal Assistant" Foreground="White" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0"/>
        <Button Content="📸" Width="32" Height="32" Margin="10,0,10,0" VerticalAlignment="Center" Grid.Column="1" Click="ScreenshotButton_Click"/>
    </Grid>
</Window>